{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://docs.veritone.com/schemas/vtn-standard/transcript.json",
  "title": "vtn-standard.object",
  "description": "Standard engine output for Object at Veritone",
  "type": "object",
  "definitions": {
    "words": {
      "allOf": [
        {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "word": {
                "$ref": "master.json#/definitions/word"
              },
              "confidence": {
                "$ref": "master.json#/definitions/confidence"
              },
              "utteranceLength": {
                "$ref": "master.json#/definitions/utteranceLength"
              },
              "bestPath": {
                "type": "boolean"
              }
            },
            "required": [
              "word"
            ],
            "additionalProperties": false
          }
        },
        {
          "type": "array",
          "if": {
            "minItems": 2
          },
          "then": {
            "items": {
              "required": [
                "confidence",
                "utteranceLength"
              ]
            },
            "uniqueItems": true,
            "requireBestPath": true
          }
        }
      ]
    }
  },
  "allOf": [
    {
      "$ref": "master.json#/definitions/header"
    },
    {
      "properties": {
        "validationContracts": {
          "type": "array",
          "contains": {
            "const": "transcript"
          }
        },
        "series": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "words": {
                "$ref": "#/definitions/words"
              },
              "startTimeMs": {
                "type": "integer",
                "minimum": 0
              },
              "stopTimeMs": {
                "type": "integer",
                "minimum": 0
              },
              "language": {
                "$ref": "master.json#/definitions/language"
              }
            },
            "required": [
              "startTimeMs",
              "stopTimeMs"
            ],
            "additionalProperties": false
          }
        }
      }
    }
  ]
}
