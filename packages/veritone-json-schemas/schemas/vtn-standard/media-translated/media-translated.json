{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://docs.veritone.com/schemas/vtn-standard/media-translated.json",
  "title": "vtn-standard.media-translated",
  "description": "Standard engine output for translated text files at Veritone",
  "type": "object",
  "allOf": [
    {
      "$ref": "master.json#/definitions/header"
    },
    {
      "properties": {
        "validationContracts": {
          "type": "array",
          "contains": {
            "const": "media-translated"
          }
        },
        "media": {
          "allOf": [
            {
              "$ref": "master.json#/definitions/media"
            },
            {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "language"
                ]
              }
            }
          ]
        }
      },
      "required": ["media"]
    }
  ]
}
